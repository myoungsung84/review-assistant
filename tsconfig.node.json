{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "outDir": "dist-electron",
    "noEmit": false,
    "declaration": false,
    "strict": true,
    "types": ["node"]
  },
  "include": ["electron/**/*.ts"],
  "exclude": [
    "vite.config.*",
    "dist/**",
    "dist-electron/**",
    "node_modules/**"
  ]
}
