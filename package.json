{
  "name": "review-assistant",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write .",
    "draft:release": "sh ./scripts/draft-release.sh",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.node.json",
    "build:pack": "npm run build:electron && npm run build:renderer && electron-builder --publish never",
    "build:win": "npm run build:electron && npm run build:renderer && electron-builder --win zip --publish never",
    "build:mac": "npm run build:electron && npm run build:renderer && electron-builder --mac --publish never",
    "release:win": "electron-builder --win zip --publish always",
    "release:all": "electron-builder --win zip --mac --publish always",
    "preview": "vite preview"
  },
  "build": {
    "asar": true,
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "electronLanguages": [
      "en-US",
      "ko"
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.6",
    "@mui/material": "^7.3.6",
    "dayjs": "^1.11.19",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "prettier": "^3.7.4",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  }
}
